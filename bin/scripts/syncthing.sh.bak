#!/usr/bin/env bash

podman run -d \
    --name=syncthing \
    --hostname=syncthing `#optional` \
    -e PUID=1000 \
    -e PGID=1000 \
    -e TZ=America/Chicago \
    -p 8384:8384 \
    -p 22000:22000/tcp \
    -p 22000:22000/udp \
    -p 21027:21027/udp \
    -v /ares/apps/syncthing/config:/config \
    -v /ares/backups/sync:/ares-sync \
    --restart unless-stopped \
    lscr.io/linuxserver/syncthing:latest
